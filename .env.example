# ==============================================
# Configuration d'exemple pour TaskFlow
# Copiez ce fichier vers .env et modifiez les valeurs
# ==============================================

# Application
NODE_ENV=development
APP_NAME=TaskFlow
APP_VERSION=1.0.0

# Backend Configuration
BACKEND_PORT=5000
JWT_SECRET=CHANGEZ_CETTE_VALEUR_PAR_UN_SECRET_SECURISE

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=votre_utilisateur_db
POSTGRES_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE
POSTGRES_DB=taskflow
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:${BACKEND_PORT}/api

# Docker Network
NETWORK_NAME=taskflow-network

# Volumes
POSTGRES_VOLUME=taskflow_postgres_data
POSTGRES_DEV_VOLUME=taskflow_postgres_dev_data